{
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "files": [],
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "features/*": ["features/*"],
      "assets/*": ["assets/*"],
      "shared/*": ["shared/*"]
    },
    "module": "ESNext",
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "strict": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true
  }
}
